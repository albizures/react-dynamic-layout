{
  "name": "react-dynamic-layout",
  "version": "0.0.0-development",
  "main": "dist/index.js",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "commitizen": "^3.0.7",
    "cz-conventional-changelog": "^1.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^24.5.0",
    "parcel-bundler": "^1.12.3",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.1.2",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^2.5.4",
    "semantic-release": "^15.13.8"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "classnames": "^2.2.6",
    "create-react-class": "^15.6.3"
  },
  "scripts": {
    "commit": "git-cz",
    "start": "parcel examples/index.html",
    "prebuild": "rimraf dist && rimraf .cache && npm run test",
    "build": "npm run build:js && npm run build:css",
    "build:js": "babel src/**/*.js --out-dir dist",
    "build:css": "parcel build src/style/**/index.css --out-dir dist/style --no-source-maps",
    "test": "jest",
    "pretest": "npm run lint",
    "lint": "eslint .",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/albizures/react-dynamic-layout.git"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
