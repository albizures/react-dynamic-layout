.rdl-container
  .rdl-stack
    .rdl-tabs
      .rdl-tab
        overflow hidden
        cursor pointer
        font bold 12px sans-serif
        float: left;
        padding: 1px 5px
        border-left: 1px solid black;
        &.active
          background: background-active-tab
  .rdl-body
    position: relative
    .rdl-item-body
      position: absolute
      width: 100%;
      height: 100%;

.rdl-hidden-z-index
  .rdl-item-body
    background: white
    z-index: 1
    &.active
      z-index: 2

.rdl-hidden-display
  .rdl-item-body
    display: none
    &.active
      display: block

.rdl-hidden-opacity
  .rdl-item-body
    opacity: 0
    pointer-events: none
    &.active
      opacity: 1
      pointer-events: all