.rdl-container
  .rdl-stack
    .rdl-tabs
      background: stack-background-color
      color: font-disable-color
      .rdl-tab
        &.active
          background: active-tab-background-color
          color: font-color
    .rdl-body
      background: stack-body-background-color
      .rdl-item-body
        position: absolute
        width: 100%;
        height: 100%;
        display: none
        &.active
          display: block