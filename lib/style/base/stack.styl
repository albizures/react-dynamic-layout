.rdl-container
  .rdl-stack
    .rdl-tabs
      .rdl-tab
        overflow hidden
        cursor pointer
        font bold 12px sans-serif
        float: left;
        padding: 1px 5px
        border-left: 1px solid black;
        &.active
          background: background-active-tab
  .rdl-body
    position: relative
    .rdl-item-body
      position: absolute
      width: 100%;
      height: 100%;
      display: none
      &.active
        display: block